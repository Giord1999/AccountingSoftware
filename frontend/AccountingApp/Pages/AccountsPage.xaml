<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             x:Class="AccountingApp.Pages.AccountsPage"
             x:DataType="viewmodels:AccountsViewModel"
             Title="Piano dei Conti">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Cerca conto..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding FilterAccountsCommand}"
                   Margin="0,0,0,10"/>

        <!-- Add Button -->
        <Button Grid.Row="1"
                Text="Aggiungi Conto"
                Command="{Binding AddAccountCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="0,0,0,10"/>

        <!-- Accounts List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshAccountsCommand}">

            <CollectionView ItemsSource="{Binding FilteredAccounts}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Label Text="Nessun conto trovato"
                               FontSize="18"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Carica Conti"
                                Command="{Binding LoadAccountsCommand}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Swipe Actions -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Modifica"
                                               BackgroundColor="Orange"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AccountsViewModel}}, Path=EditAccountCommand}"
                                               CommandParameter="{Binding .}"/>
                                    <SwipeItem Text="Elimina"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AccountsViewModel}}, Path=DeleteAccountCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Margin="5" Padding="10" StrokeShape="RoundRectangle 10">
                                <Border.Shadow>
                                    <Shadow />
                                </Border.Shadow>
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="{Binding Code}" 
                                               FontAttributes="Bold" 
                                               FontSize="16"/>
                                        <Label Text="{Binding Name}" 
                                               FontSize="14"/>
                                        <Label Text="{Binding Category}" 
                                               FontSize="12" 
                                               TextColor="Gray"/>
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1"
                                           Text="{Binding Currency}"
                                           VerticalOptions="Center"
                                           FontSize="12"
                                           TextColor="Gray"/>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

    </Grid>
</ContentPage>