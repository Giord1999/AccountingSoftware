<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             x:Class="AccountingApp.Pages.BIReportsPage"
             x:DataType="viewmodels:BIReportsViewModel"
             Title="Dashboard BI">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Refresh Button -->
            <Button Text="Aggiorna Dati"
                    Command="{Binding LoadDashboardCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"/>

            <!-- Date Range Filter -->
            <Border Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Periodo di Analisi" 
                           FontSize="16" 
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Da:" FontSize="12"/>
                            <DatePicker Date="{Binding StartDate}"
                                        Format="dd/MM/yyyy"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="A:" FontSize="12"/>
                            <DatePicker Date="{Binding EndDate}"
                                        Format="dd/MM/yyyy"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Button Text="Applica Filtro"
                            Command="{Binding ApplyDateRangeCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- KPI Cards Grid -->
            <Label Text="Indicatori Principali" 
                   FontSize="18" 
                   FontAttributes="Bold"/>

            <Grid RowDefinitions="Auto,Auto,Auto" 
                  ColumnDefinitions="*,*" 
                  RowSpacing="15" 
                  ColumnSpacing="15">

                <!-- Total Revenue -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Background="#4CAF50" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’° Ricavi Totali" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding TotalRevenue, StringFormat='{0:C}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Total Expenses -->
                <Border Grid.Row="0" Grid.Column="1" 
                       Background="#F44336" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’¸ Costi Totali" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding TotalExpenses, StringFormat='{0:C}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Net Profit -->
                <Border Grid.Row="1" Grid.Column="0" 
                       Background="#2196F3" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“Š Utile Netto" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding NetProfit, StringFormat='{0:C}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Profit Margin -->
                <Border Grid.Row="1" Grid.Column="1" 
                       Background="#FF9800" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“ˆ Margine %" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding ProfitMargin, StringFormat='{0:P2}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

                <!-- ROI -->
                <Border Grid.Row="2" Grid.Column="0" 
                       Background="#9C27B0" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’Ž ROI" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding ROI, StringFormat='{0:P2}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Cash Flow Ratio -->
                <Border Grid.Row="2" Grid.Column="1" 
                       Background="#00BCD4" 
                       Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ’§ Cash Flow" 
                               FontSize="12" 
                               TextColor="White"
                               Opacity="0.9"/>
                        <Label Text="{Binding CashFlowRatio, StringFormat='{0:F2}'}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Border>

            </Grid>

            <!-- Revenue Chart Section -->
            <Border Padding="15" Margin="0,20,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“Š Andamento Ricavi" 
                           FontSize="16" 
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding RevenueChartData}"
                                    HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="100,*" 
                                      ColumnSpacing="10" 
                                      Padding="5">
                                    <Label Grid.Column="0"
                                           Text="{Binding Label}" 
                                           FontSize="12"
                                           VerticalOptions="Center"/>
                                    <ProgressBar Grid.Column="1"
                                                 Progress="{Binding NormalizedValue}"
                                                 ProgressColor="{StaticResource Primary}"
                                                 VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Trend Analysis Section -->
            <Border Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“ˆ Analisi Trend Mensile" 
                           FontSize="16" 
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding RevenueTrendData}"
                                    MaximumHeightRequest="250">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="100,*,Auto" 
                                      ColumnSpacing="10" 
                                      Padding="5"
                                      Margin="0,5">
                                    <Label Grid.Column="0"
                                           Text="{Binding Period, StringFormat='{0:MMM yyyy}'}" 
                                           FontSize="12"
                                           VerticalOptions="Center"/>
                                    <BoxView Grid.Column="1"
                                             Color="{StaticResource Primary}"
                                             HeightRequest="20"
                                             WidthRequest="{Binding BarWidth}"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding Value, StringFormat='{0:C0}'}" 
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Transaction Count -->
            <Border Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="ðŸ“‹ Transazioni Totali:" 
                           FontSize="14"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding TransactionCount}" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Export Button -->
            <Button Text="Esporta Report"
                    Command="{Binding ExportReportCommand}"
                    BackgroundColor="{StaticResource Tertiary}"
                    TextColor="White"
                    Margin="0,10,0,20"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="{StaticResource Primary}"
                               HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>