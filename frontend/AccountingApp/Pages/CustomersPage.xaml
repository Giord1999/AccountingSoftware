<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             x:Class="AccountingApp.Pages.CustomersPage"
             x:DataType="viewmodels:CustomersViewModel"
             Title="Clienti">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Cerca cliente..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding SearchCustomersCommand}"
                   Margin="0,0,0,10"/>

        <!-- Add Button -->
        <Button Grid.Row="1"
                Text="Aggiungi Cliente"
                Command="{Binding AddCustomerCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="0,0,0,10"/>

        <!-- Customers List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCustomersCommand}">

            <CollectionView ItemsSource="{Binding Customers}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Label Text="Nessun cliente trovato"
                               FontSize="18"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Carica Clienti"
                                Command="{Binding LoadCustomersCommand}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Swipe Actions -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Modifica"
                                               BackgroundColor="Orange"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CustomersViewModel}}, Path=EditCustomerCommand}"
                                               CommandParameter="{Binding .}"/>
                                    <SwipeItem Text="Elimina"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CustomersViewModel}}, Path=DeleteCustomerCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Margin="5" Padding="15" StrokeShape="RoundRectangle 10">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Opacity="0.3" Offset="0,2"/>
                                </Border.Shadow>
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"/>

                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Rating}" 
                                           FontSize="12"
                                           TextColor="{StaticResource Primary}"/>

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding Email}" 
                                           FontSize="12"
                                           TextColor="Gray"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding VatNumber, StringFormat='P.IVA: {0}'}" 
                                           FontSize="12"
                                           TextColor="Gray"/>

                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

    </Grid>
</ContentPage>