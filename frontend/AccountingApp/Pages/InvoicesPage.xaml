<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             xmlns:models="clr-namespace:AccountingApp.Models"
             x:Class="AccountingApp.Pages.InvoicesPage"
             x:DataType="viewmodels:InvoicesViewModel"
             Title="Fatture">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Filters -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,*,Auto" 
              ColumnSpacing="10" 
              Margin="0,0,0,10">

            <!-- Type Filter -->
            <Picker Grid.Column="0" 
                    Title="Tipo"
                    SelectedItem="{Binding TypeFilter}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type models:InvoiceType}">
                        <models:InvoiceType>Sales</models:InvoiceType>
                        <models:InvoiceType>Purchase</models:InvoiceType>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Status Filter -->
            <Picker Grid.Column="1" 
                    Title="Stato"
                    SelectedItem="{Binding StatusFilter}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type models:InvoiceStatus}">
                        <models:InvoiceStatus>Draft</models:InvoiceStatus>
                        <models:InvoiceStatus>Issued</models:InvoiceStatus>
                        <models:InvoiceStatus>Posted</models:InvoiceStatus>
                        <models:InvoiceStatus>Paid</models:InvoiceStatus>
                        <models:InvoiceStatus>PartiallyPaid</models:InvoiceStatus>
                        <models:InvoiceStatus>Overdue</models:InvoiceStatus>
                        <models:InvoiceStatus>Cancelled</models:InvoiceStatus>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Grid.Column="2" 
                    Text="Filtra"
                    Command="{Binding ApplyFiltersCommand}"/>
        </Grid>

        <!-- Clear Filters Button -->
        <Button Grid.Row="1"
                Text="Rimuovi Filtri"
                Command="{Binding ClearFiltersCommand}"
                BackgroundColor="Gray"
                TextColor="White"
                Margin="0,0,0,10"/>

        <!-- Invoices List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshInvoicesCommand}">

            <CollectionView ItemsSource="{Binding Invoices}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Label Text="Nessuna fattura trovata"
                               FontSize="18"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Carica Fatture"
                                Command="{Binding LoadInvoicesCommand}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="15" StrokeShape="RoundRectangle 10">
                            <Border.Shadow>
                                <Shadow Brush="Black" Offset="0,1" Opacity="0.3" Radius="5"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoicesViewModel}}, Path=ViewInvoiceDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                <!-- Invoice Number & Type -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding InvoiceNumber}" 
                                       FontAttributes="Bold" 
                                       FontSize="16"/>

                                <Border Grid.Row="0" Grid.Column="1"
                                        StrokeShape="RoundRectangle 5"
                                        BackgroundColor="LightBlue">
                                    <Label Text="{Binding Type}" FontSize="12" Padding="8,4">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" 
                                                         Binding="{Binding Type}" 
                                                         Value="Sales">
                                                <Setter Property="Text" Value="Vendita"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" 
                                                         Binding="{Binding Type}" 
                                                         Value="Purchase">
                                                <Setter Property="Text" Value="Acquisto"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" 
                                                     Binding="{Binding Type}" 
                                                     Value="Sales">
                                            <Setter Property="BackgroundColor" Value="LightGreen"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" 
                                                     Binding="{Binding Type}" 
                                                     Value="Purchase">
                                            <Setter Property="BackgroundColor" Value="LightCoral"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <!-- Customer Name -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding CustomerName}" 
                                       FontSize="14"
                                       Margin="0,5,0,0"/>

                                <!-- Amounts -->
                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                      ColumnDefinitions="Auto,*,Auto"
                                      ColumnSpacing="10"
                                      Margin="0,5,0,0">
                                    <Label Grid.Column="0"
                                           Text="{Binding SubTotal, StringFormat='Imp: {0:C}'}" 
                                           FontSize="12"
                                           TextColor="Gray"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalVat, StringFormat='IVA: {0:C}'}" 
                                           FontSize="12"
                                           TextColor="Gray"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding TotalAmount, StringFormat='Tot: {0:C}'}" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"/>
                                </Grid>

                                <!-- Status & Date -->
                                <Label Grid.Row="3" Grid.Column="0"
                                       Text="{Binding Status}" 
                                       FontSize="12"
                                       Margin="0,5,0,0">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" 
                                                     Binding="{Binding Status}" 
                                                     Value="Paid">
                                            <Setter Property="TextColor" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" 
                                                     Binding="{Binding Status}" 
                                                     Value="Overdue">
                                            <Setter Property="TextColor" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" 
                                                     Binding="{Binding Status}" 
                                                     Value="Cancelled">
                                            <Setter Property="TextColor" Value="Gray"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Label Grid.Row="3" Grid.Column="1"
                                       Text="{Binding IssueDate, StringFormat='{0:dd/MM/yyyy}'}" 
                                       FontSize="12"
                                       TextColor="Gray"
                                       Margin="0,5,0,0"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

    </Grid>
</ContentPage>