<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             x:Class="AccountingApp.Pages.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="dotnet_bot.png"
                   HeightRequest="150"
                   WidthRequest="150"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- Title -->
            <Label Text="Accounting System"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>

            <Label Text="Gestione Contabile Integrata"
                   FontSize="16"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   Opacity="0.8"
                   Margin="0,0,0,30"/>

            <!-- Login Card -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="20">

                <VerticalStackLayout Spacing="15">

                    <!-- Email Entry -->
                    <Label Text="Email" FontAttributes="Bold"/>
                    <Entry Text="{Binding Email}"
                           Placeholder="Inserisci email"
                           Keyboard="Email"
                           ReturnType="Next"/>

                    <!-- Password Entry -->
                    <Label Text="Password" FontAttributes="Bold"/>
                    <Entry Text="{Binding Password}"
                           Placeholder="Inserisci password"
                           IsPassword="True"
                           ReturnType="Done"/>

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                           FontSize="12"/>

                    <!-- Login Button -->
                    <Button Text="Accedi"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0"/>

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                       IsVisible="{Binding IsLoading}"
                                       Color="{StaticResource Primary}"
                                       HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label Text="ï¿½ 2024 Accounting System"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   Opacity="0.6"
                   Margin="0,30,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>