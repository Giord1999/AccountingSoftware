<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AccountingApp.ViewModels"
             x:Class="AccountingApp.Pages.InventoryPage"
             x:DataType="viewmodels:InventoryViewModel"
             Title="Inventario">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Cerca articolo..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding FilterInventoryCommand}"
                   Margin="0,0,0,10"/>

        <!-- Add Button -->
        <Button Grid.Row="1"
                Text="Aggiungi Articolo"
                Command="{Binding AddInventoryItemCommand}"
                BackgroundColor="{StaticResource Tertiary}"
                TextColor="White"
                Margin="0,0,0,10"/>

        <!-- Inventory List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshInventoryCommand}">

            <CollectionView ItemsSource="{Binding FilteredInventoryItems}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Spacing="10">
                        <Label Text="Nessun articolo trovato"
                               FontSize="18"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Carica Inventario"
                                Command="{Binding LoadInventoryCommand}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Swipe Actions -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Modifica"
                                               BackgroundColor="Orange"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InventoryViewModel}}, Path=EditInventoryItemCommand}"
                                               CommandParameter="{Binding .}"/>
                                    <SwipeItem Text="Elimina"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InventoryViewModel}}, Path=DeleteInventoryItemCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="5" Padding="15" CornerRadius="10" HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding ItemCode}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"/>

                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding QuantityOnHand, StringFormat='{0} pz'}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"
                                           TextColor="{StaticResource Primary}"/>

                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding ItemName}" 
                                           FontSize="14"/>

                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="10">
                                        <Label Text="{Binding Category}" 
                                               FontSize="12"
                                               TextColor="Gray"/>
                                        <Label Text="{Binding UnitCost, StringFormat='Costo: {0:C}'}" 
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    </HorizontalStackLayout>

                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

        <!-- Loading Overlay -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

    </Grid>
</ContentPage>